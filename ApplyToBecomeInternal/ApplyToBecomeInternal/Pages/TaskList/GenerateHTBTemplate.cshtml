@page "/task-list/{id:int}/generate-headteacher-board-template"
@model ApplyToBecomeInternal.Pages.TaskList.GenerateHTBTemplateModel
@{
	ViewData["Title"] = "Generate headteacher board documents";
}

<div class="govuk-grid-row">
	<div class="govuk-grid-column-full">
		@section BeforeMain
		{
			<a asp-page="@Links.TaskList.PreviewHTBTemplate.Page" asp-route-id="@Model.Project.Id" class="govuk-back-link">@Links.TaskList.PreviewHTBTemplate.BackText</a>
		}
		<div>
			<span class="govuk-caption-xl">@Model.Project.SchoolName</span>
			<h1 class="govuk-heading-xl">Generate headteacher board (HTB) documents</h1>
		</div>
		<div class="gem-c-govspeak govuk-govspeak direction-ltr">
			<section class="attachment embedded">
				<div class="govuk-grid-column-three-quaters govuk-inset-text">
					<p class="govuk-body-m">
						Save these documents in the school's Sharepoint file
					</p>
				</div>

				@foreach (var document in Model.Project.ProjectDocuments)
				{
					<div class="govuk-grid-row">
						<div class="govuk-grid-column-one-quarter">
							<a aria-hidden="true" class="thumbnail" tabindex="-1" href="#"></a>
							<img alt="document thumbnail" src="https://www.gov.uk/assets/whitehall/pub-cover-html-b0465911e56983d98c70f0e25fba24bc206d37e8c83d4addf6421dcf6022c6cd.png" />
						</div>
						<div class="govuk-grid-column-three-quaters">
							<h2 class="govuk-heading-m govuk-!-margin-bottom-1">
								<a href="#">@document.Name</a>
							</h2>
							<p class="govuk-body-s govuk-!-margin-bottom-1">@document.Type <span>@document.Size</span></p>
						</div>
					</div>
				};
			</section>
		</div>
	</div>
</div>