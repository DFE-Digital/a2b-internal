@page "/task-list/{id:int}/confirm-general-information/published-admission-number"
@model ApplyToBecomeInternal.Pages.UpdateAcademyConversionProjectPageModel
@{
	Layout = "_QuestionLayout";
	Model.SuccessPage = Links.GeneralInformationSection.ConfirmGeneralInformation.Page;
	ViewData["Title"] = "Published admission number";
}

@section BeforeMain
{
	<a back-link-for="@Links.GeneralInformationSection.ConfirmGeneralInformation"></a>
}

<h1 class="govuk-heading-l">Update the school's published admission number (PAN) if it's not correct</h1>
<govuk-text-input name="published-admission-number" asp-for="Project.PublishedAdmissionNumber" width="5" hint="For example, 30" />