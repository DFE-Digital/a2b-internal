@page "/task-list/{id:int}/confirm-general-information/viability-issues"
@model ApplyToBecomeInternal.Pages.UpdateAcademyConversionProjectPageModel
@{
	Layout = "_QuestionLayout";
	Model.SuccessPage = Links.GeneralInformationSection.ConfirmGeneralInformation.Page;
	ViewData["Title"] = "Viability issues";
	var values = new[] { "Yes", "No" };
}

@section BeforeMain
{
	<govuk-back-link link-item="@Links.GeneralInformationSection.ConfirmGeneralInformation" />
}

<h1 class="govuk-heading-l">Are there viability issues at the school?</h1>
<govuk-radios-input name="viability-issues" asp-for="Project.ViabilityIssues" values="@values" labels="@values" />